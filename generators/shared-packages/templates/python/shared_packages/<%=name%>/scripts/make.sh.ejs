#!/bin/bash

function _install() {
    pipenv install --dev
}

function _clean() {
    echo "Cleaning $(dirname $(pwd))"
    rm -rf ../build
    rm -rf ../*.egg-info
}

command=$1
args=(${@:2})

case $command in
    "clean") _clean $args ;;
    "install") _install ;;
    *) echo "Unhandled command ${command}" ;;
esac
