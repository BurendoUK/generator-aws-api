resource "aws_iam_policy" "policy" {
  name = var.name

  policy = jsonencode({
    Version   = "2012-10-17"
    Statement = var.iam_permissions
  })
}

resource "aws_iam_policy_attachment" "policy_attachment" {
  name       = var.name
  policy_arn = aws_iam_policy.policy.arn
  roles = [
    var.role_name
  ]
}