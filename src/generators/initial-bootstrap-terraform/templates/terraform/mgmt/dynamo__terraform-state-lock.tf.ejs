resource "aws_dynamodb_table" "terraform_state_lock" {
  name = "<%=state_lock_table%>"
  billing_mode   = "PROVISIONED"
  read_capacity  = var.state_lock_table_capacity
  write_capacity = var.state_lock_table_capacity
  hash_key = "LockID"

  attribute {
    name = "LockID"
    type = "S"
  }

  lifecycle {
    prevent_destroy = true
  }
}