#!/bin/bash

function _get_terraform_dir() {
  local env=$1

  if [ "$env" = "mgmt" ]; then
    echo "$project_root/terraform/mgmt"
  else
    echo "$project_root/terraform/regular-accounts"
  fi
}

function _get_tfvar_file() {
  local env=$1

  echo "./etc/$env.tfvars"
}

function _get_terraform_env() {
  local env=$1

  echo "$env"
}